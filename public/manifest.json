{
  "name": "Answer search",
  "version": "1.0.0",
  "description": "Розширення для браузера для пошуку відповідей на запитання на платформі Mindenit Answers",
  "manifest_version": 3,
  "author": "Mindenit",
  "action": {
    "default_popup": "index.html",
    "default_title": "Оберіть текст"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "72": "img/icon-72.png",
    "96": "img/icon-96.png",
    "128": "img/icon-128.png",
    "144": "img/icon-144.png",
    "152": "img/icon-152.png",
    "192": "img/icon-192.png",
    "384": "img/icon-384.png",
    "512": "img/icon-512.png"
  }
}
